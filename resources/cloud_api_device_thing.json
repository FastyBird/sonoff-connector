{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties" : {
    "error" : {
      "type" : "integer"
    },
    "data" : {
      "type": "object",
      "properties": {
        "thingList": {
          "type": "array",
          "description": "Thing list",
          "uniqueItems": true,
          "items": {
            "type": "object",
            "properties": {
              "itemType": {
                "type": "integer",
                "enum": [1, 2, 3],
                "description": "Item type 1=userâ€™s own device 2=device shared by others 3=user's own group"
              },
              "itemData": {
                "type": "object",
                "description": "The structures of this field differs from itemType. When itemType is 1 or 2, refer to the description for device list item in [Get the list of all devices] interface. For 3, see the description of groupList item in the [Get group list] interface"
              },
              "index": {
                "type": "integer",
                "description": "Sequence number"
              }
            },
            "if": {
              "properties": {
                "itemType": {
                  "const": 3
                }
              }
            },
            "then": {
              "properties": {
                "itemData": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "description": "Group ID"
                    },
                    "name": {
                      "type": "string",
                      "description": "Group name"
                    },
                    "mainDeviceId": {
                      "type": "string",
                      "description": "The ID of main device in the group"
                    },
                    "family": {
                      "type": "object",
                      "description": "Group home settings",
                      "properties": {
                        "familyid": {
                          "type": "string",
                          "description": "Home ID"
                        },
                        "index": {
                          "type": "integer",
                          "description": "The sequence number of the group, which could be a negative number"
                        },
                        "roomid": {
                          "type": "string",
                          "description": "The ID of the room to which the group is assigned"
                        }
                      },
                      "required": [
                        "familyid",
                        "index"
                      ]
                    },
                    "params": {
                      "type": "object",
                      "description": "Group status"
                    }
                  },
                  "required": [
                    "id",
                    "name",
                    "mainDeviceId",
                    "family",
                    "params"
                  ]
                }
              }
            },
            "else": {
              "properties": {
                "itemData": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "Device name"
                    },
                    "deviceid": {
                      "type": "string",
                      "description": "Device ID"
                    },
                    "apikey": {
                      "type": "string",
                      "description": "The apikey of the device owner"
                    },
                    "extra": {
                      "type": "object",
                      "description": "The content in the extra field of factoryDevice",
                      "properties": {
                        "model": {
                          "type": "string",
                          "description": "Firmware name"
                        },
                        "ui": {
                          "type": "string",
                          "description": "UI name"
                        },
                        "uiid": {
                          "type": "integer",
                          "description": "UI ID"
                        },
                        "description": {
                          "oneOf": [
                            {
                              "type": "null"
                            },
                            {
                              "type": "string"
                            }
                          ],
                          "description": "Factory notes"
                        },
                        "manufacturer": {
                          "type": "string",
                          "description": "Factory manufacturer"
                        },
                        "mac": {
                          "type": "string"
                        },
                        "apmac": {
                          "type": "string"
                        },
                        "modelInfo": {
                          "type": "string",
                          "description": "Product model ID"
                        },
                        "brandId": {
                          "type": "string",
                          "description": "Brand ID"
                        },
                        "chipid": {
                          "type": "string",
                          "description": "Chip ID"
                        }
                      },
                      "required": [
                        "model",
                        "ui",
                        "uiid",
                        "description",
                        "manufacturer",
                        "mac",
                        "apmac",
                        "modelInfo",
                        "brandId"
                      ]
                    },
                    "brandName": {
                      "type": "string",
                      "description": "Brand name"
                    },
                    "brandLogo": {
                      "type": "string",
                      "description": "Brand logo url"
                    },
                    "showBrand": {
                      "type": "boolean",
                      "description": "Whether to display the brand"
                    },
                    "productModel": {
                      "type": "string",
                      "description": "Product model name"
                    },
                    "devGroups": {
                      "type": "array",
                      "description": "List of all the groups the device is in",
                      "uniqueItems": true,
                      "items": {
                        "type": "object",
                        "properties": {
                          "type": {
                            "type": "integer",
                            "description": "1 represents device group"
                          },
                          "groupId": {
                            "type": "string",
                            "description": "Group ID"
                          }
                        },
                        "required": [
                          "type",
                          "groupId"
                        ]
                      }
                    },
                    "tags": {
                      "type": "object",
                      "description": "Tag object, which stores a custom string, and the server is only responsible for transparent transmission"
                    },
                    "devConfig": {
                      "type": "object",
                      "description": "Device configuration from deviceConfig in the factorydevices list",
                      "properties": {
                        "p2pServerName": {
                          "type": "string",
                          "description": "Server Name"
                        },
                        "p2pAccout": {
                          "type": "string",
                          "description": "Account"
                        },
                        "p2pLicense": {
                          "type": "string",
                          "description": "License"
                        }
                      }
                    },
                    "settings": {
                      "type": "object",
                      "description": "User settings. Please refer to [Change device settings] interface description",
                      "properties": {
                        "opsNotify": {
                          "type": "integer",
                          "enum": [
                            0,
                            1
                          ],
                          "description": "Whether to notify the user of device status change (default 0) 0=no 1=yes"
                        },
                        "opsHistory": {
                          "type": "integer",
                          "enum": [
                            0,
                            1
                          ],
                          "description": "Whether to save activity logs of the device (default 1) 0=no 1=yes"
                        },
                        "alarmNotify": {
                          "type": "integer",
                          "enum": [
                            0,
                            1
                          ],
                          "description": "Whether to send alerts from sensors or alarms to the user (default 1) 0=Do not send 1=Send"
                        }
                      }
                    },
                    "family": {
                      "type": "object",
                      "description": "Home of the device",
                      "properties": {
                        "familyid": {
                          "type": "string",
                          "description": "Home ID"
                        },
                        "index": {
                          "type": "integer",
                          "description": "Device index, which could be negative"
                        },
                        "roomid": {
                          "type": "string",
                          "description": "Room ID of the device"
                        }
                      },
                      "required": [
                        "familyid",
                        "index"
                      ]
                    },
                    "sharedBy": {
                      "type": "object",
                      "description": "If the device is shared by others, it will have this attribute",
                      "properties": {
                        "apikey": {
                          "type": "string",
                          "description": "Unique identity of the user to which the device belongs (currently using symmetric encryption of the string)"
                        },
                        "phoneNumber": {
                          "type": "string",
                          "description": "Mobile number of the device owner"
                        },
                        "email": {
                          "type": "string",
                          "description": "Email of the device owner"
                        },
                        "nickname": {
                          "type": "string",
                          "description": "Nickname of the device owner"
                        },
                        "permit": {
                          "type": "integer",
                          "description": "User's permission value, default is 0",
                          "default": 0
                        },
                        "comment": {
                          "type": "string",
                          "description": "Note of sharing"
                        },
                        "shareTime": {
                          "type": "integer",
                          "description": "GMT standard time, in milliseconds, used to order sharing in app"
                        }
                      },
                      "required": [
                        "apikey",
                        "permit"
                      ]
                    },
                    "shareTo": {
                      "type": "array",
                      "description": "The list of shared user with whom the device has been shared",
                      "properties": {
                        "apikey": {
                          "type": "string",
                          "description": "Unique identity of the user to which the device belongs (currently using symmetric encryption of the string)"
                        },
                        "email": {
                          "type": "string",
                          "description": "Email of the device owner"
                        },
                        "nickname": {
                          "type": "string",
                          "description": "Nickname of the device owner"
                        },
                        "shareTime": {
                          "type": "integer",
                          "description": "GMT standard time, in milliseconds, used to order sharing in app"
                        },
                        "phoneNumber": {
                          "type": "string",
                          "description": "Mobile number of the device owner"
                        },
                        "comment": {
                          "type": "string",
                          "description": "Note of sharing"
                        },
                        "permit": {
                          "type": "integer",
                          "description": "User's permission value, default is 0",
                          "default": 0
                        }
                      },
                      "required": [
                        "permit"
                      ]
                    },
                    "devicekey": {
                      "type": "string",
                      "description": "Factory apikey of the device"
                    },
                    "online": {
                      "type": "boolean",
                      "description": "Online status"
                    },
                    "params": {
                      "type": "object",
                      "description": "Status attributes of device"
                    },
                    "gsmInfoData": {
                      "type": "object",
                      "description": "Sim card status object of GSM device"
                    }
                  },
                  "required": [
                    "name",
                    "deviceid",
                    "apikey",
                    "extra",
                    "brandName",
                    "brandLogo",
                    "showBrand",
                    "productModel",
                    "family",
                    "devicekey",
                    "online"
                  ]
                }
              }
            }
          }
        },
        "total": {
          "type": "integer",
          "description": "Total number of things (device + device group)"
        }
      }
    },
    "msg" : {
      "type" : "string"
    }
  },
  "required" : [
    "error",
    "msg"
  ]
}
